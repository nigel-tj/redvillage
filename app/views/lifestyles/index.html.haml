%link{:href => "/css/ticker.css", :rel => "stylesheet"}/
/%link{:href => "/css/Icomoon/style.css", :rel => "stylesheet", :type => "text/css"}/
/%link{:href => "/css/animated-masonry-gallery.css", :rel => "stylesheet", :type => "text/css"}/
/%script{:src => "/scripts/jquery-2.0.2.min.js", :type => "text/javascript"}
/%script{:src => "/scripts/jquery-ui-1.10.4.min.js", :type => "text/javascript"}
/%script{:src => "/scripts/jquery.isotope.min.js", :type => "text/javascript"}

.container
  / start news tabs
  #gallery
    / banner
    .row
      .col-sm-12.banner
        %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/21/RCV_7STARS_scampD.jpg"}
    / banner end
    / start services
    .row.front-news
      .col-sm-12.services.text-center
        .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
          %nav
            %ul.filters
              %li.hvr-sweep-to-top.active.filter{"data-filter" => ".fashion", :id => "#hot_100"}
                %span Fashion
              %li.hvr-sweep-to-top.filter{"data-filter" => ".healthyLiving"}
                %span Healthy living
              %li.hvr-sweep-to-top.filter{"data-filter" => ".streetHustle"}
                %span Street Hustle
              %li.hvr-sweep-to-top.filter{"data-filter" => ".gadgets"}
                %span Gadgets
        .gallery-photo-grid
          .gallery-photos
            .gallery-photos-thumb
              - for article in @lifestyle
                -if(article.category == "fashion")
                  .gallery-photo-item.mix.fashion.wow.fadeIn
                    %a.pretty-photo{"rel" => "prettyPhoto[iframe]", :href => "#{article.image_url}"}
                      .photo-thumb
                        = image_tag article.image_url(:thumb)
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-play.fa-2x

                -if(article.category == "healthyLiving")
                  .gallery-photo-item.mix.healthyLiving.wow.fadeIn
                    %a.pretty-photo{"rel" => "prettyPhoto[iframe]", :href => "#{article.image_url}"}
                      .photo-thumb
                        = image_tag article.image_url(:thumb)
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-play.fa-2x

                -if(article.category == "streetHustle")
                  .gallery-photo-item.mix.streetHustle.wow.fadeIn
                    %a.pretty-photo{"rel" => "prettyPhoto[iframe]", :href => "#{article.image_url}"}
                      .photo-thumb
                        = image_tag article.image_url(:thumb)
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-play.fa-2x

                -if(article.category == "gadgets")
                  .gallery-photo-item.mix.vidoes.wow.fadeIn
                    %a.pretty-photo{"rel" => "prettyPhoto[iframe]", :href => "#{article.image_url}"}
                      .photo-thumb
                        = image_tag article.image_url(:thumb)
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-play.fa-2x

      / Adverts
      .col-sm-3
        .side-adverts
          %ul.advert-image
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg"}
            %li
              %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg"}

<%= storefront_css(@store) %>
<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="mb-0">Order #<%= @order.id %></h3>
          <span class="badge bg-<%= @order.status == 'delivered' ? 'success' : @order.status == 'shipped' ? 'info' : 'warning' %>">
            <%= @order.status.titleize %>
          </span>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5>Order Items</h5>
            <table class="table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% @order_items.each do |item| %>
                  <tr>
                    <td>
                      <%= link_to item.product.name, store_product_path(@store, item.product), class: "text-decoration-none" %>
                    </td>
                    <td><%= item.quantity %></td>
                    <td>$<%= sprintf('%.2f', item.unit_price || item.product.price) %></td>
                    <td>$<%= sprintf('%.2f', item.total_price || (item.quantity * item.unit_price)) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <h5>Shipping Address</h5>
              <p class="text-muted">
                <%= @order.shipping_name %><br>
                <%= simple_format(@order.shipping_address) %>
                <% if @order.shipping_phone.present? %>
                  <br>Phone: <%= @order.shipping_phone %>
                <% end %>
              </p>
            </div>
            <% if @order.billing_address.present? && @order.billing_address != @order.shipping_address %>
              <div class="col-md-6">
                <h5>Billing Address</h5>
                <p class="text-muted"><%= simple_format(@order.billing_address) %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Order Summary</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal</span>
            <span><%= @order.formatted_total %></span>
          </div>
          <hr>
          <div class="d-flex justify-content-between mb-3">
            <strong>Total</strong>
            <strong class="h5 text-primary">$<%= sprintf('%.2f', @order.total_amount) %></strong>
          </div>
          
          <div class="mb-3">
            <small class="text-muted">Placed on</small><br>
            <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          
          <% if @payment %>
            <div class="mb-3">
              <small class="text-muted">Payment Status</small><br>
              <% case @payment.status
                 when 'succeeded', 'paid' %>
                <span class="badge bg-success">Paid</span>
              <% when 'failed' %>
                <span class="badge bg-danger">Failed</span>
              <% else %>
                <span class="badge bg-warning">Pending</span>
              <% end %>
            </div>
          <% end %>
          
          <div class="d-grid gap-2 mt-4">
            <%= link_to "Back to Store", store_products_path(@store), class: "btn btn-outline-primary" %>
            <% if @store.owner?(current_user) || current_user&.admin? %>
              <%= link_to "View All Orders", store_orders_path(@store), class: "btn btn-outline-secondary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


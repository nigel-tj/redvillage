.container.mt-4
  .row.justify-content-center
    .col-lg-10
      .card
        .card-header
          %h2.mb-0
            %i.fas.fa-user-plus.me-2
            Add New Artist
        .card-body
          = form_for @artist, html: { multipart: true } do |f|
            = render 'shared/errors', object: @artist
            .row
              .col-md-6.mb-3
                = f.label :name, class: "form-label"
                = f.text_field :name, class: 'form-control', required: true, placeholder: 'Artist name'
                %small.form-text.text-muted Artist name
              .col-md-6.mb-3
                = f.label :email, class: "form-label"
                = f.email_field :email, class: 'form-control', required: true, placeholder: 'artist@example.com'
                %small.form-text.text-muted Artist email
            .row
              .col-md-6.mb-3
                = f.label :cover, class: "form-label"
                = f.file_field :cover, class: 'form-control', accept: 'image/*'
                %small.form-text.text-muted Cover image
              .col-md-6.mb-3
                = f.label :profile_picture, class: "form-label"
                = f.file_field :profile_picture, class: 'form-control', accept: 'image/*'
                %small.form-text.text-muted Profile picture
            .mb-3
              = f.label :category, class: "form-label"
              = f.select "category", [["Select category","none"],["Model","model"], ["Label","label"], ["Management","management"]], {}, { class: 'form-select' }
              %small.form-text.text-muted Artist category
            .mb-3
              = f.label :cell_number, class: "form-label"
              = f.text_field :cell_number, class: 'form-control', placeholder: 'Cellphone number'
              %small.form-text.text-muted Contact number
            .mb-3
              = f.label :bio, class: "form-label"
              = f.text_area :bio, class: 'form-control', required: true, rows: 4, placeholder: 'Artist biography'
              %small.form-text.text-muted Artist biography
            .d-flex.justify-content-between.mt-4
              = link_to 'Cancel', artists_path, class: 'btn btn-secondary'
              = f.submit 'Create Artist', class: 'btn btn-primary'


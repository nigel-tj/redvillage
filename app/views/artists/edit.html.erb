<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Edit Artist
          </h2>
        </div>
        <div class="card-body">
          <%= form_for @artist, html: { multipart: true } do |f| %>
            <%= render 'shared/errors', object: @artist %>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :name, class: "form-label" %>
                <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Artist name' %>
                <small class="form-text text-muted">Artist name</small>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'artist@example.com' %>
                <small class="form-text text-muted">Artist email</small>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :cover, class: "form-label" %>
                <%= f.file_field :cover, class: 'form-control', accept: 'image/*' %>
                <small class="form-text text-muted">Cover image</small>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :profile_picture, class: "form-label" %>
                <%= f.file_field :profile_picture, class: 'form-control', accept: 'image/*' %>
                <small class="form-text text-muted">Profile picture</small>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :category, class: "form-label" %>
              <%= f.select "category", [["Select category","none"],["Model","model"], ["Label","label"], ["Management","management"]], {}, { class: 'form-select' } %>
              <small class="form-text text-muted">Artist category</small>
            </div>
            <div class="mb-3">
              <%= f.label :cell_number, class: "form-label" %>
              <%= f.text_field :cell_number, class: 'form-control', placeholder: 'Cellphone number' %>
              <small class="form-text text-muted">Contact number</small>
            </div>
            <div class="mb-3">
              <%= f.label :bio, class: "form-label" %>
              <%= f.text_area :bio, class: 'form-control', required: true, rows: 4, placeholder: 'Artist biography' %>
              <small class="form-text text-muted">Artist biography</small>
            </div>
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Cancel', artists_path, class: 'btn btn-secondary' %>
              <%= f.submit 'Update Artist', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


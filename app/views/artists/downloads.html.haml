/ download
#reservation.module.parallax.parallax-reservation
  .container
    .row
      %h1.wow.fadeInUp{"data-wow-duration" => "1s"} Artist Name
      %p.wow.fadeIn{"data-wow-duration" => "1s"}
      .col-sm-12.reservation-form        
/ start gallery
#gallery.text-center
  .container
    .row.text-center
      .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
        %nav
          %ul.filters
            %li.hvr-sweep-to-top.active.filter{"data-filter" => ".bio"}
              %span Bio
            %li.hvr-sweep-to-top.filter{"data-filter" => ".allDownloads"}
              %span All Downloads
  .container-fluid
    .row.gallery.text-center
      .col-md-12.noPadding
        .gallery-photo-grid
          .gallery-photos
            .gallery-photos-thumb
              .gallery-photo-item.mix.bio.wow.fadeIn
                %a.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "images/site-images/ass.jpg"}
                  .photo-thumb
                    %img{:alt => "image-1", :src => "images/site-images/400/1.png"}
                  .overlay
                    %span.gallery-icon
                      %i.fa.fa-search-plus.fa-2x
              .col-sm-12.gallery-track-item.mix.allDownloads.wow.fadeIn{"data-wow-delay" => "0.2s"}
                .col-sm-10.col-sm-offset-1
                  %h1 Track downloads
                  %table.table.table-striped
                    %thead
                      %tr
                        %th Track name
                        %th File Size
                        %th
                    %tbody
                    - for song in @songs 
                      %tr
                        %td
                          #{song.track_title}
                        %td
                          file size
                        %td
                        %td.text-right
                          %a.btn.btn-sm.btn-default{:href => "#"} Get Track   
/ end gallery


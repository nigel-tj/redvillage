<div class="card auth-card">
  <div class="card-header text-center">
    <h2 class="mb-2">
      <i class="fas fa-lock mr-2"></i>
      Set New Admin Password
    </h2>
    <p class="auth-subtext mb-0">Choose a strong password</p>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'auth-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "New password", class: 'form-label' %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Enter new password' %>
        <% if @minimum_password_length %>
          <div class="form-text auth-subtext">
            <%= @minimum_password_length %> characters minimum
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Confirm new password' %>
      </div>

      <%= f.submit 'Update Password', class: 'btn btn-auth-primary w-100' %>
    <% end %>
  </div>

  <div class="card-footer">
    <div class="auth-links">
      <%= link_to "Back to sign in", new_session_path(resource_name), class: 'auth-subtext' %>
      <span class="auth-divider"></span>
      <%= link_to "Back to Site", root_path, class: 'auth-subtext' %>
    </div>
  </div>
</div> 
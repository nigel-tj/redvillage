<div style="max-width: 400px; margin: 80px auto 0;">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center mb-4">Admin Sign In</h3>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div>
          <%= f.submit "SIGN IN", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-muted text-decoration-none" %>
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted text-decoration-none" %>
      </div>
    </div>
  </div>
</div> 
<div class="admin-registration-container">
  <div class="card auth-card">
    <div class="card-header text-center">
      <h2 class="mb-2">
        <i class="fas fa-user-plus mr-2"></i>
        Create Admin Account
      </h2>
      <p class="auth-subtext mb-0">Register for admin access</p>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form admin-registration-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-lg', placeholder: 'Enter admin email address', required: true %>
          </div>
          <small class="form-text text-muted">
            <i class="fas fa-info-circle"></i> This email will be used for admin access
          </small>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Create a strong password', required: true, minlength: 8, id: 'admin_password' %>
          </div>
          <% if @minimum_password_length %>
            <div class="form-text auth-subtext">
              <i class="fas fa-shield-alt"></i> <%= @minimum_password_length %> characters minimum
            </div>
          <% end %>
          <div class="password-strength mt-2">
            <div class="strength-bar">
              <div class="strength-fill" id="admin_strength_fill"></div>
            </div>
            <small class="form-text" id="admin_strength_text">Password strength</small>
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-lock"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Confirm your password', required: true %>
          </div>
        </div>

        <%= f.submit 'Create Admin Account', class: 'btn btn-auth-primary w-100' %>
      <% end %>

      <!-- Admin Notice -->
      <div class="admin-notice mt-3">
        <div class="alert alert-warning mb-0">
          <i class="fas fa-exclamation-triangle mr-2"></i>
          <strong>Important:</strong> Admin accounts require approval from existing administrators.
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="auth-links">
        <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: 'auth-subtext' %>
        <span class="auth-divider"></span>
        <%= link_to "Back to Site", root_path, class: 'auth-subtext' %>
      </div>
    </div>
  </div>
</div>

<style>
.admin-registration-container {
  max-width: 500px;
  margin: 0 auto;
}

.admin-registration-form .input-group-text {
  background: #f8f9fa;
  border-right: none;
  color: #dc3545;
}

.admin-registration-form .form-control {
  border-left: none;
}

.admin-registration-form .form-control:focus {
  border-left: 1px solid #dc3545;
  box-shadow: none;
}

.admin-registration-form .input-group .form-control:focus ~ .input-group-text {
  border-color: #dc3545;
}

.admin-notice .alert-warning {
  background-color: #fff3cd;
  border-color: #ffeaa7;
  color: #856404;
  font-size: 0.9rem;
}

.password-strength {
  margin-top: 0.5rem;
}

.strength-bar {
  height: 4px;
  background: #e0e0e0;
  border-radius: 2px;
  overflow: hidden;
}

.strength-fill {
  height: 100%;
  width: 0%;
  transition: all 0.3s ease;
  border-radius: 2px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Password strength indicator for admin
  const passwordField = document.querySelector('#admin_password');
  const strengthFill = document.getElementById('admin_strength_fill');
  const strengthText = document.getElementById('admin_strength_text');
  
  if (passwordField && strengthFill && strengthText) {
    passwordField.addEventListener('input', function() {
      const password = this.value;
      const strength = calculatePasswordStrength(password);
      
      strengthFill.style.width = strength.percentage + '%';
      strengthFill.style.background = strength.color;
      strengthText.textContent = strength.text;
      strengthText.style.color = strength.color;
    });
  }
  
  function calculatePasswordStrength(password) {
    let score = 0;
    
    if (password.length >= 8) score += 20;
    if (password.length >= 12) score += 20;
    if (/[a-z]/.test(password)) score += 20;
    if (/[A-Z]/.test(password)) score += 20;
    if (/[0-9]/.test(password)) score += 10;
    if (/[^a-zA-Z0-9]/.test(password)) score += 10;
    
    if (score < 40) {
      return { percentage: score, color: '#dc3545', text: 'Weak' };
    } else if (score < 70) {
      return { percentage: score, color: '#ffc107', text: 'Fair' };
    } else if (score < 90) {
      return { percentage: score, color: '#17a2b8', text: 'Good' };
    } else {
      return { percentage: score, color: '#28a745', text: 'Strong' };
    }
  }
});
</script>

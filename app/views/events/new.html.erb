<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-calendar-plus me-2"></i>
            New Event
          </h2>
        </div>
        <div class="card-body">
          <%= form_for @event, html: { multipart: true } do |f| %>
            <%= render 'shared/errors', object: @event %>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :name, class: "form-label" %>
                <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Event name' %>
                <small class="form-text text-muted">Event name</small>
              </div>
              
              <div class="col-md-6 mb-3">
                <%= f.label :date, class: "form-label" %>
                <%= f.date_field :date, class: 'form-control', required: true %>
                <small class="form-text text-muted">Event date</small>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :start_time, class: "form-label" %>
                <%= f.time_field :start_time, class: 'form-control', required: true %>
                <small class="form-text text-muted">Event start time</small>
              </div>
              
              <div class="col-md-6 mb-3">
                <%= f.label :venue, class: "form-label" %>
                <%= f.text_field :venue, class: 'form-control', required: true, placeholder: 'Event venue' %>
                <small class="form-text text-muted">Event venue</small>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :summary, class: "form-label" %>
              <%= f.text_area :summary, class: 'form-control', required: true, rows: 4, placeholder: 'Event headlines and description' %>
              <small class="form-text text-muted">Event headlines</small>
            </div>
            
            <div class="mb-3">
              <%= f.label :image, class: "form-label" %>
              <%= f.file_field :image, class: 'form-control', required: true, accept: 'image/*' %>
              <small class="form-text text-muted">Event poster image</small>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :standard_ticket_price, class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                  <%= f.number_field :standard_ticket_price, class: 'form-control', step: '0.01', min: '0', required: true, placeholder: '0.00' %>
                </div>
                <small class="form-text text-muted">Price for standard tickets</small>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :vip_ticket_price, class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                  <%= f.number_field :vip_ticket_price, class: 'form-control', step: '0.01', min: '0', required: true, placeholder: '0.00' %>
                </div>
                <small class="form-text text-muted">Price for VIP tickets</small>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :currency, class: "form-label" %>
                <%= f.select :currency, 
                    [
                      ['USD ($)', 'USD'],
                      ['EUR (€)', 'EUR'],
                      ['GBP (£)', 'GBP'],
                      ['JPY (¥)', 'JPY'],
                      ['AUD (A$)', 'AUD'],
                      ['CAD (C$)', 'CAD'],
                      ['CHF (Fr)', 'CHF'],
                      ['CNY (¥)', 'CNY'],
                      ['INR (₹)', 'INR'],
                      ['ZAR (R)', 'ZAR']
                    ],
                    { selected: 'USD' },
                    { class: 'form-select' }
                %>
                <small class="form-text text-muted">Select the currency for ticket prices</small>
              </div>
              
              <div class="col-md-6 mb-3">
                <label class="form-label">Options</label>
                <div class="form-check mt-2">
                  <%= f.check_box :featured, class: 'form-check-input' %>
                  <%= f.label :featured, "Mark as featured event", class: 'form-check-label' %>
                </div>
                <small class="form-text text-muted">Featured events will be displayed on the featured events page</small>
              </div>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Cancel', admin_all_events_path, class: 'btn btn-secondary' %>
              <%= f.submit 'Create Event', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- breadcrump begin -->
<div class="breadcrump">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <%= render_breadcrumbs %>
            </div>
        </div>
    </div>
</div>
<!-- breadcrump end -->

<!-- Designers listing begin -->
<div class="team-dj top-dj-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8">
                <div class="add-space section-title text-center">
                    <h2>Our Designers</h2>
                    <p class="text-muted">Meet our talented designers</p>
                </div>
            </div>
        </div>
        
        <% if @designers.any? %>
            <div class="row">
                <% @designers.each do |designer| %>
                    <%= render 'profile_card', profile: designer.profile, user: designer %>
                <% end %>
            </div>
        <% else %>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted">No designers with public profiles yet. Check back soon!</p>
                </div>
            </div>
        <% end %>
    </div>
</div>
<!-- Designers listing end -->


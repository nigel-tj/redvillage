<!-- breadcrump begin -->
<div class="breadcrump">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-6">
                <%= render_breadcrumbs %>
            </div>
        </div>
    </div>
</div>
<!-- breadcrump end -->

<!-- All Creators listing begin -->
<div class="team-dj top-dj-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8">
                <div class="add-space section-title text-center">
                    <h2>Our Content Creators</h2>
                    <p class="text-muted">Meet all our talented creators</p>
                </div>
            </div>
        </div>
        
        <% if @creators.any? %>
            <div class="row">
                <% @creators.each do |creator| %>
                    <%= render 'profile_card', profile: creator.profile, user: creator %>
                <% end %>
            </div>
        <% else %>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-muted">No creators with public profiles yet. Check back soon!</p>
                </div>
            </div>
        <% end %>
    </div>
</div>
<!-- All Creators listing end -->


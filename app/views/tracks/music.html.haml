.container
  / start news tabs
  #gallery
    / banner
    .row
      .col-sm-12.banner
        %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/21/RCV_7STARS_scampD.jpg"}
    / banner end

    /news tabs
    .row
      .col-sm-9
        .row
          .col-sm-12
          .ticker-container.col-sm-2
            .ticker-caption
              %p Music
        / start services
        .row.front-news
        .col-sm-12.services.text-center
          .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
            %nav
              %ul.filters
                %li.hvr-sweep-to-top.active.filter{"data-filter" => ".hot100", :id => "#hot_100"}
                  %span RCV Playlist 
                %li.hvr-sweep-to-top.filter{"data-filter" => ".mixtapes"}
                  %span Albums / Mixtapes
            .grid              
              - for track in @tracks
                .grid-item.grid-sizer.col-sm-4.servicebox.featured_club  
                  .servicebox-image
                    %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "#", :onclick => "playSong()"}
                      %img{:alt => "#{track.title}", :src => "#{track.image_url(:thumb)}"}
                  .servicebox-inner
                    %p
                      #{track.title}
                    .overlay
                      %span.gallery-icon
                        %i.fa.fa-play.fa-2x
  

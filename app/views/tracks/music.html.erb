<script src="/scripts/masonry.pkgd.min.js" type="text/javascript"></script>
<script src="/scripts/isotope.pkgd.min.js" type="text/javascript"></script>
<script src="/scripts/isotope.init.js" type="text/javascript"></script>
<div class="container">
  <!-- start news tabs -->
  <div id="gallery">
    <!-- banner -->
    <div class="row">
      <div class="col-sm-12 banner">
        <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/21/RCV_7STARS_scampD.jpg">
      </div>
    </div>
    <!-- banner end -->
    <!-- start services -->
    <div class="row">
      <div class="col-sm-9 services">
        <div class="row">
          <div class="col-sm-12">
            <div class="tabs tabs-style-linebox wow fadeInUp" data-wow-duration="2s">
              <nav class="pull-right">
                <ul class="content_filter">
                  <li class="hvr-sweep-to-top active filter" data-filter=".rcv_playlist" id="#rcv_playlist">
                    <span>RCV Playlist</span>
                  </li>
                  <li class="hvr-sweep-to-top filter" data-filter=".albums_mixtapes" id="#albums">
                    <span>Albums / Mixtapes</span>
                  </li>
                </ul>
              </nav>
            </div>
          </div>

          <div class="col-sm-12" id="gallery-content">
            <div class="grid">
              <% for track in @tracks %>
                <% if(track.category == "rcv_playlist") %>
                  <div class="grid-item grid-sizer col-sm-4 servicebox rcv_playlist">
                    <div class="servicebox-image">
                      <a class="vid-item pretty-photo" data-gal="prettyPhoto[gallery-photo-thumb]" href="#" onclick="playSong()">
                        <img alt="<%= track.title %>" src="<%= track.image_url(:thumb) %>">
                      </a>
                    </div>
                    <div class="servicebox-inner">
                      <p><%= track.title %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>

              <% for album in @albums %>
                <div class="grid-item grid-sizer col-sm-4 servicebox albums_mixtapes">
                  <div class="servicebox-image">
                    <a class="vid-item pretty-photo" data-gal="prettyPhoto[gallery-photo-thumb]" href="#" onclick="playSong()">
                      <img alt="<%= track.title %>" src="<%= track.image_url(:thumb) %>">
                    </a>
                  </div>
                  <div class="servicebox-inner">
                    <p><%= track.title %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- Adverts -->
      <div class="col-sm-3">
        <div class="side-adverts">
          <ul class="advert-image">
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg">
            </li>
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg">
            </li>
          </ul>
        </div>
      </div>
      <!-- Adverts -->
      <div class="col-sm-3">
        <div class="side-adverts">
          <ul class="advert-image">
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg">
            </li>
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg">
            </li>
          </ul>
        </div>
      </div>
      <!-- Adverts -->
      <div class="col-sm-3">
        <div class="side-adverts">
          <ul class="advert-image">
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg">
            </li>
            <li>
              <img class="img-responsive" alt="image" src="http://www.redvillage.co.za/uploads/main_banner/image/16/COUSIN_JMF_do_it_like_boss_banner_redcup.jpg">
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function playSong() {
    document.getElementById("audio_player").src = "https://raw.githubusercontent.com/kolber/audiojs/master/mp3/bensound-dubstep.mp3";
  }

  $(document).ready(function(){    
    document.getElementById('#rcv_playlist').classList.add("active");
    $('.grid').masonry({
      // options...
      itemSelector: '.grid-item',
      columnWidth: '.grid-sizer',
      percentPosition: true
    });
  });
</script>


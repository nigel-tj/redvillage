<% content_for :title, "My Ticket Listings | The Red Cup Village" %>

<div class="container mt-4 mb-5">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="display-5 fw-bold mb-2">
        <i class="fas fa-ticket-alt text-primary"></i> My Ticket Listings
      </h1>
      <p class="text-muted">Manage your ticket sales</p>
    </div>
    <%= link_to new_ticket_listing_path, class: "btn btn-primary btn-lg" do %>
      <i class="fas fa-plus-circle"></i> Create New Listing
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-4">
      <div class="card border-primary shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-ticket-alt fa-2x text-primary mb-3"></i>
          <h3 class="mb-0"><%= @available_count %></h3>
          <p class="text-muted mb-0">Available Listings</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-success shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
          <h3 class="mb-0"><%= @sold_count %></h3>
          <p class="text-muted mb-0">Sold Listings</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-warning shadow-sm">
        <div class="card-body text-center">
          <i class="fas fa-dollar-sign fa-2x text-warning mb-3"></i>
          <h3 class="mb-0">$<%= sprintf('%.2f', @total_revenue) %></h3>
          <p class="text-muted mb-0">Total Revenue</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Ticket Listings -->
  <% if @ticket_listings.any? %>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Event</th>
                <th>Type</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @ticket_listings.each do |listing| %>
                <tr>
                  <td>
                    <strong><%= listing.event.name %></strong>
                    <br>
                    <small class="text-muted">
                      <% if listing.event.date %>
                        <%= listing.event.date.strftime("%b %d, %Y") %>
                      <% end %>
                    </small>
                  </td>
                  <td>
                    <% if listing.ticket_type == 'vip' %>
                      <span class="badge bg-warning text-dark">
                        <i class="fas fa-star"></i> VIP
                      </span>
                    <% else %>
                      <span class="badge bg-primary">Standard</span>
                    <% end %>
                  </td>
                  <td>
                    <strong><%= listing.formatted_price %></strong>
                    <% if listing.has_discount? %>
                      <br>
                      <small class="text-muted text-decoration-line-through">
                        <%= listing.formatted_original_price %>
                      </small>
                    <% end %>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="me-2">
                        <strong class="<%= listing.is_available? ? 'text-success' : 'text-danger' %>">
                          <%= listing.available_quantity %>
                        </strong>
                        / <%= listing.quantity %>
                      </div>
                      <div class="progress" style="width: 60px; height: 8px;">
                        <div class="progress-bar <%= listing.is_available? ? 'bg-success' : 'bg-danger' %>" 
                             style="width: <%= (listing.sold_quantity.to_f / listing.quantity * 100) %>%">
                        </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <% case listing.status %>
                    <% when 'available' %>
                      <span class="badge bg-success">Available</span>
                    <% when 'pending' %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% when 'sold' %>
                      <span class="badge bg-danger">Sold</span>
                    <% when 'expired' %>
                      <span class="badge bg-secondary">Expired</span>
                    <% end %>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= time_ago_in_words(listing.created_at) %> ago
                    </small>
                  </td>
                  <td>
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to ticket_listing_path(listing), 
                          class: "btn btn-outline-primary", 
                          title: "View" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <%= link_to edit_ticket_listing_path(listing), 
                          class: "btn btn-outline-secondary",
                          title: "Edit" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to ticket_listing_path(listing), 
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: "btn btn-outline-danger",
                          title: "Delete" do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
        <h3>No listings yet</h3>
        <p class="text-muted mb-4">
          Start selling your tickets by creating your first listing!
        </p>
        <%= link_to new_ticket_listing_path, class: "btn btn-primary btn-lg" do %>
          <i class="fas fa-plus-circle"></i> Create Your First Listing
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
.table th {
  border-top: none;
  font-weight: 600;
  color: #495057;
}
</style>


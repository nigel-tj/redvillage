<% content_for :title, "Change Password | The Red Cup Village" %>

<div class="card auth-card">
  <div class="card-header text-center">
    <h2 class="mb-2">
      <i class="fas fa-lock mr-2"></i>
      Change Your Password
    </h2>
    <p class="auth-subtext mb-0">Choose a strong password to keep your account safe</p>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'auth-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, 'New password', class: 'form-label' %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Enter new password (minimum 8 characters)' %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, 'Confirm new password', class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control form-control-lg', placeholder: 'Confirm your new password' %>
      </div>

      <%= f.submit 'Change Password', class: 'btn btn-auth-primary w-100' %>
    <% end %>
  </div>

  <div class="card-footer">
    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), class: "auth-link mr-3" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create an account", new_registration_path(resource_name), class: "auth-link mr-3" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class: "auth-link" %>
<% end %>

<style>
.auth-link {
  color: #dc3545;
  text-decoration: none;
  transition: all 0.3s ease;
  font-weight: 500;
}

.auth-link:hover {
  color: #b52d42;
  text-decoration: underline;
}
</style>

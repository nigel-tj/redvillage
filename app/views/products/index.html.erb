<div class="container mt-4">
  <%= storefront_css(@store) %>
  <div class="storefront-header mb-4" style="<%= "background-color: #{@store.storefront_settings_with_defaults.primary_color}; color: white; padding: 2rem; border-radius: 0.5rem;" if @store.storefront_settings.present? %>">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1><%= @store.name %></h1>
        <p class="mb-0"><%= @store.description %></p>
      </div>
      <% if user_signed_in? && @store.owner?(current_user) %>
        <%= link_to new_store_product_path(@store), class: "btn btn-light" do %>
          <i class="fas fa-plus me-1"></i> Add Product
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-4">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h2>Products</h2>
      </div>
      <div class="col-md-6">
        <%= form_with url: store_products_path(@store), method: :get, local: true, class: "d-flex gap-2" do |f| %>
          <%= f.text_field :search, placeholder: "Search products...", value: params[:search], class: "form-control" %>
          <%= f.submit "Search", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <% if @products.any? %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <% if product.primary_image %>
              <%= link_to store_product_path(@store, product) do %>
                <div style="height: 200px; overflow: hidden; background: #f8f9fa;">
                  <%= image_tag product.primary_image.image_url(:medium) || product.primary_image.image, alt: product.name, style: "width: 100%; height: 100%; object-fit: cover;" %>
                </div>
              <% end %>
            <% else %>
              <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fas fa-image fa-3x text-white"></i>
              </div>
            <% end %>
            
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= link_to product.name, store_product_path(@store, product), class: "text-decoration-none" %>
              </h5>
              <p class="card-text text-muted flex-grow-1">
                <%= truncate(product.description, length: 80) %>
              </p>
              
              <div class="mb-2">
                <span class="h5 text-primary"><%= product.formatted_price %></span>
                <% if product.has_discount? %>
                  <span class="text-muted text-decoration-line-through ms-2"><%= product.formatted_price %></span>
                  <span class="badge bg-danger ms-2">-<%= product.discount_percentage %>%</span>
                <% end %>
              </div>
              
              <div class="mb-2">
                <% if product.in_stock? %>
                  <span class="badge bg-success">In Stock</span>
                <% else %>
                  <span class="badge bg-danger">Out of Stock</span>
                <% end %>
                <% if product.featured? %>
                  <span class="badge bg-warning text-dark">Featured</span>
                <% end %>
              </div>
              
              <div class="mt-auto">
                <% if product.in_stock? %>
                  <%= form_with url: add_item_store_cart_path(@store), method: :post, local: true do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.hidden_field :quantity, value: 1 %>
                    <%= f.submit "Add to Cart", class: "btn btn-primary w-100" %>
                  <% end %>
                <% else %>
                  <button class="btn btn-secondary w-100" disabled>Out of Stock</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="row mt-4">
      <div class="col-12">
        <%= paginate @products %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-box-open fa-4x mb-3 text-muted"></i>
      <h3>No products found</h3>
      <p class="text-muted">
        <% if user_signed_in? && @store.owner?(current_user) %>
          <%= link_to "Add the first product", new_store_product_path(@store), class: "btn btn-primary" %>
        <% else %>
          This store doesn't have any products yet.
        <% end %>
      </p>
    </div>
  <% end %>
</div>


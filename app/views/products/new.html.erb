<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-plus me-2"></i>
            Add New Product
          </h2>
        </div>
        <div class="card-body">
          <%= form_for [@store, @product], html: { multipart: true } do |f| %>
            <%= render 'shared/errors', object: @product %>
            
            <div class="row">
              <div class="col-md-8 mb-3">
                <%= f.label :name, class: "form-label" %>
                <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Product name' %>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= f.label :sku, "SKU (Optional)", class: "form-label" %>
                <%= f.text_field :sku, class: 'form-control', placeholder: 'Product SKU' %>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :description, class: "form-label" %>
              <%= f.text_area :description, class: 'form-control', rows: 4, placeholder: 'Product description' %>
            </div>
            
            <div class="row">
              <div class="col-md-4 mb-3">
                <%= f.label :price, class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <%= f.number_field :price, class: 'form-control', step: 0.01, min: 0, required: true, placeholder: '0.00' %>
                </div>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= f.label :compare_at_price, "Compare at Price (Optional)", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <%= f.number_field :compare_at_price, class: 'form-control', step: 0.01, min: 0, placeholder: '0.00' %>
                </div>
                <small class="form-text text-muted">Original price to show discount</small>
              </div>
              
              <div class="col-md-4 mb-3">
                <%= f.label :inventory_quantity, class: "form-label" %>
                <%= f.number_field :inventory_quantity, class: 'form-control', min: 0, value: 0, required: true %>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :weight, "Weight (Optional)", class: "form-label" %>
                <div class="input-group">
                  <%= f.number_field :weight, class: 'form-control', step: 0.01, min: 0, placeholder: '0.00' %>
                  <span class="input-group-text">lbs</span>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <%= f.label :status, class: "form-label" %>
                <%= f.select :status, options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @product.status), {}, { class: 'form-select' } %>
              </div>
            </div>
            
            <div class="mb-3">
              <div class="form-check">
                <%= f.check_box :featured, class: 'form-check-input' %>
                <%= f.label :featured, "Feature this product", class: 'form-check-label' %>
              </div>
            </div>
            
            <div class="mb-3">
              <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                You can add images after creating the product.
              </small>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Cancel', store_products_path(@store), class: 'btn btn-secondary' %>
              <%= f.submit 'Create Product', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


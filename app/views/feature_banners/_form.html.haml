= form_for @feature_banner, html: { multipart: true } do |f|
  - if @feature_banner.errors.any?
    .alert.alert-danger
      %h5= "#{pluralize(@feature_banner.errors.count, "error")} prohibited this feature_banner from being saved:"
      %ul.mb-0
        - @feature_banner.errors.full_messages.each do |msg|
          %li= msg

  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: 'form-control', placeholder: 'Banner name'
  .mb-3
    = f.label :description, class: "form-label"
    = f.text_area :description, class: 'form-control', rows: 4, placeholder: 'Banner description'
  .mb-3
    = f.label :image, class: "form-label"
    = f.file_field :image, class: 'form-control', accept: 'image/*'
    %small.form-text.text-muted Banner image file
  .mb-3
    = f.label :link, class: "form-label"
    = f.text_field :link, class: 'form-control', placeholder: 'https://example.com'
    %small.form-text.text-muted Link URL for the banner
  .d-flex.justify-content-between.mt-4
    = link_to 'Cancel', feature_banners_path, class: 'btn btn-secondary'
    = f.submit 'Save', class: 'btn btn-primary'

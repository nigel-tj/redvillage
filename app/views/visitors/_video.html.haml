.container
  #main_area
    / Slider
    .row
      #slider-thumbs.col-sm-6
        
        / Bottom switcher of slider
        %ul.hide-bullets
          %li.col-sm-3
            - @videos.each do |video|
              .thumbnail#carousel-selector-"#{video.id}"
                =  image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title, class: 'img-rounded')
             
          
        .col-sm-6
          #slider.col-xs-12
            / Top part of the slider
            .row
              #carousel-bounding-box.col-sm-12
                #myCarousel.carousel.slide
                  / Carousel items
                  .carousel-inner
                    .active.item{"data-slide-number" => "0"}
                      %img{:src => "http://placehold.it/470x480&text=zero"}/
                    .item{"data-slide-number" => "1"}
                      %img{:src => "http://placehold.it/470x480&text=1"}/
                    .item{"data-slide-number" => "2"}
                      %img{:src => "http://placehold.it/470x480&text=2"}/

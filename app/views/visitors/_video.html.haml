
.container
  .row
    .col-sm-10
      %h1  Latest 
      %br
      
      .container
        .row
          .col-md-12
            - @videos.each do |video|
              .col-md-6.embed-responsive.embed-responsive-4by3.thumbnail
                %iframe.embed-responsive-item{:allowfullscreen => "", :height => "315", :src => "//www.youtube.com/embed/#{video.uid}"}
                %br
     
.divider
.container
  #main_area
    / Slider
    .row
      #slider-thumbs.col-sm-6
        / Bottom switcher of slider
        
        %ul.video-hide-bullets
          - @videos.each do |video|
            %li.col-sm-3
              .yt_video.thumbnail
                = link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title, |
                  class: 'img-rounded'), "#_#{video.id}"
                .caption
                  %h5= video.title
                  %p
                    Published at #{video.published_at.strftime('%-d %B %Y %H:%M:%S')}
                  %p
                    %span.glyphicon.glyphicon.glyphicon-thumbs-up
                    = video.likes
                    %span.glyphicon.glyphicon.glyphicon-thumbs-down
                    = video.dislikes
            
      .col-sm-6
        #slider.col-xs-12
          / Top part of the slider
          .row
            #carousel-bounding-box.col-sm-12
              #video-Carousel.carousel.slide
                / Carousel items
                .carousel-inner
                  - @videos.each do |video|
                    .active.item.embed-responsive.embed-responsive-4by3{"data-slide-number" => "#_#{video.id}"}
                      %iframe.embed-responsive-item{:allowfullscreen => "", :height => "315", :src => "//www.youtube.com/embed/#{video.uid}"}
                  
                / Carousel nav
                %a.left.carousel-control{"data-slide" => "prev", :href => "#video-Carousel", :role => "button"}
                  %span.glyphicon.glyphicon-chevron-left
                %a.right.carousel-control{"data-slide" => "next", :href => "#video-Carousel", :role => "button"}
                  %span.glyphicon.glyphicon-chevron-right
      / /Slider
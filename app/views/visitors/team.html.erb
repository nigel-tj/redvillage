<div class="container py-5">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h1 class="display-4 font-weight-bold text-dark mb-3">Our Team</h1>
      <p class="lead text-muted">Meet the talented individuals behind The Red Cup Village</p>
      <div class="divider mx-auto my-4" style="width: 60px; height: 3px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
    </div>
  </div>

  <!-- DJs Section -->
  <% if @djs.any? %>
    <div class="row mb-5">
      <div class="col-12 mb-4">
        <h3 class="text-center mb-4">Our DJs</h3>
      </div>
      <% @djs.each do |dj| %>
        <%= render 'profiles_listings/profile_card', profile: dj.profile, user: dj %>
      <% end %>
    </div>
  <% end %>

  <!-- Artists Section -->
  <% if @artists.any? %>
    <div class="row mb-5">
      <div class="col-12 mb-4">
        <h3 class="text-center mb-4">Our Artists</h3>
      </div>
      <% @artists.each do |artist| %>
        <%= render 'profiles_listings/profile_card', profile: artist.profile, user: artist %>
      <% end %>
    </div>
  <% end %>

  <!-- Photographers Section -->
  <% if @photographers.any? %>
    <div class="row mb-5">
      <div class="col-12 mb-4">
        <h3 class="text-center mb-4">Our Photographers</h3>
      </div>
      <% @photographers.each do |photographer| %>
        <%= render 'profiles_listings/profile_card', profile: photographer.profile, user: photographer %>
      <% end %>
    </div>
  <% end %>

  <!-- Videographers Section -->
  <% if @videographers.any? %>
    <div class="row mb-5">
      <div class="col-12 mb-4">
        <h3 class="text-center mb-4">Our Videographers</h3>
      </div>
      <% @videographers.each do |videographer| %>
        <%= render 'profiles_listings/profile_card', profile: videographer.profile, user: videographer %>
      <% end %>
    </div>
  <% end %>

  <% unless @djs.any? || @artists.any? || @photographers.any? || @videographers.any? %>
    <div class="row">
      <div class="col-12 text-center">
        <p class="text-muted">No team members with public profiles yet. Check back soon!</p>
      </div>
    </div>
  <% end %>

  <!-- Call to Action -->
  <div class="row mt-5">
    <div class="col-12 text-center">
      <div class="bg-gradient-primary text-white rounded-lg p-5">
        <h3 class="mb-3">Join Our Team</h3>
        <p class="mb-4">We're always looking for talented individuals to join our growing community</p>
        <a href="<%= contact_us_path %>" class="btn btn-light btn-lg font-weight-bold px-4">Get In Touch</a>
      </div>
    </div>
  </div>
</div>

<style>
.bg-gradient-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card:hover {
  transform: translateY(-5px);
  transition: all 0.3s ease;
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.divider {
  margin: 0 auto;
}
</style>

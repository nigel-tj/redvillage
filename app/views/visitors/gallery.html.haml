#services
  .container
    .row

#gallery.text-center
  .container
    .row.text-center
      .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
        %nav
          %ul.filters
            %li.hvr-sweep-to-top.active.filter{"data-filter" => "all"}
              %span All
            %li.hvr-sweep-to-top.filter{"data-filter" => ".new"}
              %span Latest
            %li.hvr-sweep-to-top.filter{"data-filter" => ".hallOfFame"}
              %span Hall Of Fame
  .container-fluid
    .row.gallery.text-center
      .col-md-12.noPadding
        .gallery-photo-grid
          .gallery-photos
            .gallery-photos-thumb
              - for gallery in @galleries
                - if(gallery.category == "new")
                  .gallery-photo-item.mix.new.fadeIn
                    %a.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "galleries/#{gallery.id}"}
                      .photo-thumb
                        = image_tag gallery.image_url(:thumb) if gallery.image?
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-search-plus.fa-2x
                - if(gallery.category == "hallOfFame")
                  .gallery-photo-item.mix.hallOfFame.fadeIn
                    %a.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href =>  "galleries/#{gallery.id}"}
                      .photo-thumb
                        = image_tag gallery.image_url(:thumb) if gallery.image?
                      .overlay
                        %span.gallery-icon
                          %i.fa.fa-search-plus.fa-2x

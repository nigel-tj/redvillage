#services
  .container
    .row
    / start gallery
    #gallery.text-center
      .container
        .row.text-center
          .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
            %nav
              %ul.filters
                %li.hvr-sweep-to-top.active.filter{"data-filter" => ".all", :id => "#all_tab"}
                  %span Albums
                %li.hvr-sweep-to-top.filter{"data-filter" => ".featured_clubs"}
                  %span Featured clubs
                %li.hvr-sweep-to-top.filter{"data-filter" => ".events"}
                  %span Events
                %li.hvr-sweep-to-top.filter{"data-filter" => ".campains"}
                  %span Campaigns
      .container-fluid
        .row.gallery.text-center
          .col-md-12.noPadding
            .gallery-photo-grid
              .gallery-photos
                .gallery-photos-thumb
                  - for gallery in @galleries
                    - if(gallery.category == "new")
                      .gallery-photo-item.mix.new.fadeIn
                        %a.pretty-photo{"rel" => "prettyPhoto[iframes]", :href => "galleries/#{gallery.id}"}
                          .photo-thumb
                            = image_tag gallery.image_url(:thumb) if gallery.image?
                          .overlay
                            %span.gallery-icon
                              %i.fa.fa-search-plus.fa-2x
                    - if(gallery.category == "hallOfFame")
                      .gallery-photo-item.mix.hallOfFame.fadeIn
                        %a.pretty-photo{"rel" => "prettyPhoto[iframes]", :href =>  "galleries/#{gallery.id}"}
                          .photo-thumb
                            = image_tag gallery.image_url(:thumb) if gallery.image?
                          .overlay
                            %span.gallery-icon
                              %i.fa.fa-search-plus.fa-2x
:javascript
  $(document).ready(function(){
    document.getElementById('#bio_div').style.display = 'none';
    document.getElementById('#all_tab').classList.add("active");
  });

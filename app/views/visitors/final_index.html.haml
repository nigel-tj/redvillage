/ start banner
#banner.module.parallax.parallax-header
  .container
    .row
      .banner-inner
        #header-slider.owl-carousel
          - for banner in @banners
            .item.col-xs-12
              %h1.title.title-lines
                %span #{banner.name}
              %h3.subtitle #{banner.title}
              %a.btn-play{"data-gal" => "prettyPhoto", :href => "#{banner.image_url(:thumb)}"}
                %span.play-button
                  %i.fa.fa-play.fa-4x
    .row.banner-bottom.hidden-xs
      .concert-info
        .col-xs-12.col-sm-3.col-md-3.no-left-padding
          .concert-info-body
            %span.pull-left
              %i.fa.fa-calendar.fa-2x
            .concert-info-text
              %h4 Date
              %span 10 March,2016
        .col-xs-12.col-sm-3.col-md-3.no-left-padding
          .concert-info-body
            %span.pull-left
              %i.fa.fa-users.fa-2x
            .concert-info-text
              %h4 Remaining
              %span 245 Tickets
        .col-xs-12.col-sm-3.col-md-3.no-left-padding
          .concert-info-body
            %span.pull-left
              %i.fa.fa-microphone.fa-2x
            .concert-info-text
              %h4 Artists
              %span 6 Famous Artists
        .col-xs-12.col-sm-3.col-md-3.no-left-padding
          .concert-info-body
            %span.pull-left
              %i.fa.fa-map-marker.fa-2x
            .concert-info-text
              %h4 Location
              %span ABC, XYZ, France

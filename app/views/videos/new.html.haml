#services
  .container
    .row
.container
  %h1 New video
  = form_for @video do |f|
    = render 'shared/errors', object: @video
    .form-group
      = f.label :link
      = f.text_field :link, class: 'form-control', required: true
      %span.help-block A link to the video on YouTube.
      %p
        %select{ :name => :category }
          %option{:value => "none"}= "Select category"
          %option{:value => "bangers"}= "Bangers"
          %option{:value => "villageHits"}= "Village hits"
          %option{:value => "upcoming"}= "Upcoming"
      %p
    = f.submit class: 'btn btn-primary'

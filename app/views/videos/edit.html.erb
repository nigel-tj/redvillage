<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Edit Video
          </h2>
        </div>
        <div class="card-body">
          <%= form_for @video do |f| %>
            <%= render 'shared/errors', object: @video %>
            <div class="mb-3">
              <%= f.label :link, class: "form-label" %>
              <%= f.text_field :link, class: 'form-control', required: true, placeholder: 'https://www.youtube.com/watch?v=...' %>
              <small class="form-text text-muted">A link to the video on YouTube</small>
            </div>
            <div class="mb-3">
              <%= f.label :category, class: "form-label" %>
              <%= f.text_field :category, class: 'form-control', placeholder: 'Video category' %>
              <small class="form-text text-muted">Video category</small>
            </div>
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Cancel', videos_path, class: 'btn btn-secondary' %>
              <%= f.submit 'Update Video', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


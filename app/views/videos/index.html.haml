#services
  .container
    .row
    #gallery.text-center
      .container
        .row.text-center
          .tabs.tabs-style-linebox.wow.fadeInUp{"data-wow-duration" => "2s"}
            %nav
              %ul.filters
                %li.hvr-sweep-to-top.active.filter{"data-filter" => "all"}
                  %span All
                %li.hvr-sweep-to-top.filter{"data-filter" => ".videos"}
                  %span Village hits
                %li.hvr-sweep-to-top.filter{"data-filter" => ".bangers"}
                  %span #bangers
                %li.hvr-sweep-to-top.filter{"data-filter" => ".upcoming"}
                  %span Upcoming
      .container-fluid
        .row.gallery.text-center
          .col-md-12.noPadding
            .gallery-photo-grid
              .gallery-photos
                .gallery-photos-thumb
                  - if @videos.any?
                    - @videos.in_groups_of(1) do |group|
                      - group.take(5).collect do |video|
                        - if video.category == "upcoming"
                          .col.md-3.gallery-photo-item.flexslider.mix.upcoming.wow.fadeIn
                            %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "https://www.youtube.com/watch?v=#{video.uid}"}
                              .photo-thumb
                                %img{:alt => "#{video.title}", :src => "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg"}
                              .desc
                                %p
                                  #{video.title}
                              .overlay
                                %span.gallery-icon
                                  %i.fa.fa-play.fa-2x
                         
                        - elsif video.category == "bangers"
                          .col.md-3.gallery-photo-item.flexslider.mix.bangers.wow.fadeIn
                            %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "https://www.youtube.com/watch?v=#{video.uid}"}
                              .photo-thumb
                                %img{:alt => "#{video.title}", :src => "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg"}
                              .desc
                                %p
                                  #{video.title}
                              .overlay
                                %span.gallery-icon
                                  %i.fa.fa-play.fa-2x

                        - elsif video.category == "villageHits"
                          .col.md-3.gallery-photo-item.flexslider.mix.videos.wow.fadeIn
                            %a.vid-item.pretty-photo{"data-gal" => "prettyPhoto[gallery-photo-thumb]", :href => "https://www.youtube.com/watch?v=#{video.uid}"}
                              .photo-thumb
                                %img{:alt => "#{video.title}", :src => "https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg"}
                                .desc
                                  %p
                                    #{video.title}
                              .overlay
                                %span.gallery-icon
                                  %i.fa.fa-play.fa-2x

                        

<div class="container">
  <h1>Upload New Banner</h1>
  <%= form_for @banner, html: { class: "form-horizontal", multipart: true } do |f| %>
    <%= render 'shared/errors', object: @banner %>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', required: true %>
        <span class="help-block">Banner name.</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', required: true %>
        <span class="help-block">Text to show on banner.</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :page, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.select "page", [["Select page to display banner","none"],["Home","home"], ["Videos","videos"],["Music","music"],["Events","events"],["Artists","artists"]] %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.file_field :image, required: true %>
        <span class="help-block">Banner.</span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div> 
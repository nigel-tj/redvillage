<div id="services">
  <div class="container">
    <div class="row">
      <div class="container">
        <h1>New Gallery</h1>
        <%= form_for @gallery, html: { class: "form-horizontal" } do |f| %>
          <%= render 'shared/errors', object: @gallery %>
          <div class="form-group">
            <%= f.label :name, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control', required: true %>
              <span class="help-block">Gallery name</span>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :image, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
              <%= f.file_field :image, required: true %>
              <span class="help-block">Gallery Cover.</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

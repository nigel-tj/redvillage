<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-images me-2"></i>
            New Gallery
          </h2>
        </div>
        <div class="card-body">
          <%= form_for @gallery, html: { multipart: true } do |f| %>
            <%= render 'shared/errors', object: @gallery %>
            
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: 'form-control', required: true, placeholder: 'Gallery name' %>
              <small class="form-text text-muted">Gallery name</small>
            </div>
            
            <div class="mb-3">
              <%= f.label :image, class: "form-label" %>
              <%= f.file_field :image, class: 'form-control', required: true, accept: 'image/*' %>
              <small class="form-text text-muted">Gallery cover image</small>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Cancel', galleries_path, class: 'btn btn-secondary' %>
              <%= f.submit 'Create Gallery', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Galleries</h1>
      <p><%= link_to "New Album", new_gallery_path %></p>
      
      <% for gallery in @galleries %>
      <div class="col-md-4" style="height:250px">
        <img src="https://placehold.it/300x200" alt="Album Cover">
        <p>
          <%= link_to gallery.name, gallery %><br />
          Images: <%= gallery.images.size %>
        </p>  
      </div>
    <% end %>
    </div>
  </div>
</div>

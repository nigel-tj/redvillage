<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Galleries</h1>
        <%= link_to "New Gallery", new_gallery_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @galleries.each do |gallery| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if gallery.image? %>
            <div class="card-img-top">
              <%= image_tag gallery.image_url(:thumbnail), class: "img-fluid card-img-top" %>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to gallery.name, gallery %></h5>
            <p class="card-text">
              <small class="text-muted">Images: <%= gallery.images.size %></small>
            </p>
            <div class="btn-group" role="group">
              <%= link_to "View", gallery, class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Edit", edit_gallery_path(gallery), class: "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @galleries.empty? %>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-info text-center">
          No galleries found. <%= link_to "Create your first gallery", new_gallery_path %>
        </div>
      </div>
    </div>
  <% end %>
</div>

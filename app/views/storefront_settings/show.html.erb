<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h3 class="mb-0"><i class="fas fa-paint-brush me-2"></i>Storefront Settings</h3>
        </div>
        <div class="card-body">
          <p class="text-muted">Customize your store's appearance and branding.</p>
          
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="card">
                <div class="card-body text-center">
                  <div style="width: 100%; height: 100px; background-color: <%= @storefront_settings.primary_color || '#007bff' %>; border-radius: 0.25rem;"></div>
                  <small class="text-muted mt-2 d-block">Primary Color</small>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body text-center">
                  <div style="width: 100%; height: 100px; background-color: <%= @storefront_settings.secondary_color || '#6c757d' %>; border-radius: 0.25rem;"></div>
                  <small class="text-muted mt-2 d-block">Secondary Color</small>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body text-center">
                  <div style="width: 100%; height: 100px; background-color: <%= @storefront_settings.accent_color || '#28a745' %>; border-radius: 0.25rem;"></div>
                  <small class="text-muted mt-2 d-block">Accent Color</small>
                </div>
              </div>
            </div>
          </div>
          
          <div class="d-grid gap-2">
            <%= link_to edit_store_storefront_settings_path(@store), class: "btn btn-primary" do %>
              <i class="fas fa-edit me-1"></i> Edit Settings
            <% end %>
            <%= link_to preview_store_storefront_settings_path(@store), class: "btn btn-outline-primary", target: "_blank" do %>
              <i class="fas fa-eye me-1"></i> Preview Storefront
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Current Settings</h5>
        </div>
        <div class="card-body">
          <ul class="list-unstyled">
            <li class="mb-2">
              <strong>Theme:</strong> <%= @storefront_settings.theme.titleize %>
            </li>
            <li class="mb-2">
              <strong>Font:</strong> <%= @storefront_settings.font_family %>
            </li>
            <li class="mb-2">
              <strong>Primary:</strong> 
              <span class="badge" style="background-color: <%= @storefront_settings.primary_color %>">
                <%= @storefront_settings.primary_color %>
              </span>
            </li>
            <li class="mb-2">
              <strong>Secondary:</strong> 
              <span class="badge" style="background-color: <%= @storefront_settings.secondary_color %>">
                <%= @storefront_settings.secondary_color %>
              </span>
            </li>
            <li>
              <strong>Accent:</strong> 
              <span class="badge" style="background-color: <%= @storefront_settings.accent_color %>">
                <%= @storefront_settings.accent_color %>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


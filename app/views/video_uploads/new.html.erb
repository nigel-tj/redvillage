<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">
            <i class="fas fa-upload me-2"></i>
            Upload Video
          </h2>
        </div>
        <div class="card-body">
          <% if current_user %>
            <%= form_for @video_upload, html: { multipart: true } do |f| %>
              <%= render 'shared/errors', object: @video_upload %>
              <div class="mb-3">
                <%= f.label :file, class: "form-label" %>
                <%= f.file_field :file, class: 'form-control', required: true, accept: 'video/*' %>
                <small class="form-text text-muted">Select video file to upload</small>
              </div>
              <div class="mb-3">
                <%= f.label :title, class: "form-label" %>
                <%= f.text_field :title, class: 'form-control', required: true, placeholder: 'Video title' %>
                <small class="form-text text-muted">Video title</small>
              </div>
              <div class="mb-3">
                <%= f.label :description, class: "form-label" %>
                <%= f.text_area :description, class: 'form-control', rows: 4, placeholder: 'Video description' %>
                <small class="form-text text-muted">Video description</small>
              </div>
              <div class="d-flex justify-content-between mt-4">
                <%= link_to 'Cancel', video_uploads_path, class: 'btn btn-secondary' %>
                <%= f.submit 'Upload Video', class: 'btn btn-primary' %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-warning">
              <p class="mb-0">
                Please <%= link_to 'sign in', '/auth/google_oauth2' %> to upload videos.
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1>
          <i class="fas fa-store me-2"></i>
          My Stores
        </h1>
        <%= link_to new_store_path, class: 'btn btn-primary' do %>
          <i class="fas fa-plus me-1"></i> Create New Store
        <% end %>
      </div>
    </div>
  </div>

  <% if @stores.any? %>
    <div class="row">
      <% @stores.each do |store| %>
        <div class="col-xl-4 col-lg-4 col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <% if store.cover.present? %>
              <%= link_to store_path(store) do %>
                <div style="height: 200px; overflow: hidden; background: #f8f9fa;">
                  <%= image_tag store.cover, alt: store.name, style: "width: 100%; height: 100%; object-fit: cover;" %>
                </div>
              <% end %>
            <% else %>
              <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fas fa-store fa-4x text-white"></i>
              </div>
            <% end %>
            
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to store.name, store_path(store), class: "text-decoration-none" %>
              </h5>
              <p class="card-text text-muted">
                <%= truncate(store.description, length: 100) %>
              </p>
              
              <% if store.mall.present? %>
                <div class="mb-2">
                  <small class="text-muted">
                    <i class="fas fa-building me-1"></i>
                    <%= store.mall.name %>
                  </small>
                </div>
              <% end %>
              
              <div class="mb-2">
                <% if store.active? %>
                  <span class="badge bg-success">Active</span>
                <% else %>
                  <span class="badge bg-warning text-dark">Inactive</span>
                <% end %>
              </div>
            </div>
            
            <div class="card-footer bg-white">
              <div class="btn-group w-100" role="group">
                <%= link_to "View", store_path(store), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_store_path(store), class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="row mt-4">
      <div class="col-12">
        <%= paginate @stores %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-12">
        <div class="empty-state text-center py-5">
          <i class="fas fa-store fa-4x mb-3 text-muted"></i>
          <h3>You don't have any stores yet</h3>
          <p class="mb-4 text-muted">
            <%= link_to "Create your first store", new_store_path, class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


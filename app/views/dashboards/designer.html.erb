<div class="container-fluid mt-4">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1 class="mb-4">Designer Dashboard</h1>
      <p>Welcome back, <%= @user.name %>!</p>
      <p class="text-muted">Manage banners and visual design assets.</p>
      <%= render 'shared/profile_quick_links', user: @user %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Total Banners</h5>
          <h2><%= @stats[:total_banners] %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">My Banners</h5>
          <h2><%= @stats[:my_banners] %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Active Banners</h5>
          <h2><%= @stats[:active_banners] %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title">Quick Actions</h5>
          <%= link_to "Create Banner", new_banner_upload_path, class: "btn btn-primary btn-sm w-100 mb-2" %>
          <%= link_to "View All Banners", banners_index_path, class: "btn btn-outline-primary btn-sm w-100" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">My Banners</h5>
          <%= link_to "Create New Banner", new_banner_upload_path, class: "btn btn-primary btn-sm" %>
        </div>
        <div class="card-body">
          <% if @banners.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Banner Name</th>
                    <th>Page</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @banners.each do |banner| %>
                    <tr>
                      <td><%= banner.name || "Untitled Banner" %></td>
                      <td>
                        <% if banner.page.present? %>
                          <span class="badge bg-info"><%= banner.page %></span>
                        <% else %>
                          <span class="text-muted">N/A</span>
                        <% end %>
                      </td>
                      <td><%= time_ago_in_words(banner.created_at) %> ago</td>
                      <td>
                        <%= link_to "View", main_banner_path(banner), class: "btn btn-sm btn-primary me-1" %>
                        <%= link_to "Edit", edit_main_banner_path(banner), class: "btn btn-sm btn-outline-secondary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted">No banners created yet.</p>
            <%= link_to "Create Your First Banner", new_banner_upload_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Recent Banners</h5>
        </div>
        <div class="card-body">
          <% if @recent_banners.any? %>
            <ul class="list-group list-group-flush">
              <% @recent_banners.each do |banner| %>
                <li class="list-group-item">
                  <%= link_to banner.name || "Untitled Banner", main_banner_path(banner), class: "fw-bold" %>
                  <small class="text-muted d-block">
                    <% if banner.page.present? %>
                      Page: <%= banner.page %> - 
                    <% end %>
                    <%= time_ago_in_words(banner.created_at) %> ago
                  </small>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No banners available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

